<p id="notice"><%= notice %></p>

<h1>Possible Days</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>From date</th>
      <th>To date</th>
      <th>From time</th>
      <th>To time</th>
      <th>Event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @possible_days.each do |possible_day| %>
      <tr>
        <td><%= possible_day.day %></td>
        <td><%= possible_day.from_date %></td>
        <td><%= possible_day.to_date %></td>
        <td><%= possible_day.from_time %></td>
        <td><%= possible_day.to_time %></td>
        <td><%= possible_day.event %></td>
        <td><%= link_to 'Show', possible_day %></td>
        <td><%= link_to 'Edit', edit_possible_day_path(possible_day) %></td>
        <td><%= link_to 'Destroy', possible_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Possible Day', new_possible_day_path %>
