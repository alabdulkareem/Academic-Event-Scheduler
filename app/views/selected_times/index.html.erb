<p id="notice"><%= notice %></p>

<h1>Selected Times</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Event</th>
      <th>From date</th>
      <th>To date</th>
      <th>From time</th>
      <th>To time</th>
      <th>Cell status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @selected_times.each do |selected_time| %>
      <tr>
        <td><%= selected_time.student %></td>
        <td><%= selected_time.event %></td>
        <td><%= selected_time.from_date %></td>
        <td><%= selected_time.to_date %></td>
        <td><%= selected_time.from_time %></td>
        <td><%= selected_time.to_time %></td>
        <td><%= selected_time.cell_status %></td>
        <td><%= link_to 'Show', selected_time %></td>
        <td><%= link_to 'Edit', edit_selected_time_path(selected_time) %></td>
        <td><%= link_to 'Destroy', selected_time, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Selected Time', new_selected_time_path %>
